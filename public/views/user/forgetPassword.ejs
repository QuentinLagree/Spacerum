<%- include('../template/header') %>
<%- include('../componants/topbar') %>

<link rel="stylesheet" href="/assets/css/form.css">

<main>
        
    <% if (locals.flash && locals.flash.error) { %>
    <div class="error box" id="suc">
        <p><%= flash.error %></p>
        <div class="cross">
            <div class="layers"></div>
        </div>
    </div>
   <% } %> 
    <% if (locals.flash && locals.flash.success) { %>
    <div class="success box" id="suc">
        <p><%= flash.success %></p>
        <div class="cross">
            <div class="layers"></div>
        </div>
    </div>
   <% } %> 
    <div class="container">
    <h2>Récupération du mot de passe</h2>
    <h3>Saisis ton adresse mail afin que l'on t'envoie un lien pour changer ton mot de passe.</h3>
        <form action="/password/" method="post">
            <div class="inputs">
                <input type="text" name="email" placeholder="Email">
            </div>
            <input type="submit" value="Récupérer mon mot de passe">
        </form>
    </div>
</main>

<%- include('../template/footer') %>