<%- include('../template/header') %>
<%- include('../componants/topbar') %>

<link rel="stylesheet" href="/assets/css/form.css">

<main>
     <% if (locals.flash && locals.flash.error) { %>
    <div class="error box" id="suc">
        <p><%= flash.error%></p>
        <div class="cross">
            <div class="layers"></div>
        </div>
    </div>
   <% } %> 
    <% if (locals.flash && locals.flash.success) { %>
    <div class="success box" id="suc">
        <p><%= flash.success %></p>
        <div class="cross">
            <div class="layers"></div>
        </div>
    </div>
   <% } %> 
    <div class="container">
    <h2>Connection</h2>
        <form action="/login/" method="post" id="submit">
            <div class="inputs">
                <input type="text" id="username" name="userOrEmail" class="" placeholder="Email ou Nom d'utilisateur">
                <div class="contain_password">
                    <input type="password" id="password" name="password" class="" placeholder="Mot de passe">
                    <h1 class="eye">Salut</h1>
                </div>
            </div>
            <div class="options">
                <div class="remember-me">
                    <div class="checkbox">
                        <input id="checkbox" type="checkbox" name="remember_me">
                        <span class="checked"><svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="check" role="img"
                            xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="svg-inline--fa fa-check fa-w-16 fa-2x">
                            <path fill="#fff"
                                d="M435.848 83.466L172.804 346.51l-96.652-96.652c-4.686-4.686-12.284-4.686-16.971 0l-28.284 28.284c-4.686 4.686-4.686 12.284 0 16.971l133.421 133.421c4.686 4.686 12.284 4.686 16.971 0l299.813-299.813c4.686-4.686 4.686-12.284 0-16.971l-28.284-28.284c-4.686-4.686-12.284-4.686-16.97 0z"
                                class=""></path>
                        </svg></span>
                        <span class="not-checked"></span>
                    </div>
                    <p>Se souvenir de moi</p>
                </div>
                <a href="/password/">Mot de passe oublié  ?</a>
            </div>
            <input type="submit" value="Se connecter">
            <p class="redirect">Première visite ? <a href="/register">Inscrivez-vous</a>.</p>
        </form>
    </div>
</main>

<script src="/assets/js/Checkbox.js"></script>
<%- include('../template/footer') %>