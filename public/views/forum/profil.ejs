<%- include('../template/header') %>
<%- include('../componants/topbar') %>
<% if (logout) { %>
   <%- include("../componants/logout")  %>  
<% } %>
<% if (locals.flash && locals.flash.error) { %>
    <div class="error box" id="suc">
        <p><%= flash.error%></p>
        <div class="cross">
            <div class="layers"></div>
        </div>
    </div>
   <% } %> 
    <% if (locals.flash && locals.flash.success) { %>
    <div class="success box" id="suc">
        <p><%= flash.success %></p>
        <div class="cross">
            <div class="layers"></div>
        </div>
    </div>
   <% } %> 

<link rel="stylesheet" href="/assets/css/profil.css">

<div class="profil container">
   <div class="containEdit">
      <h1 id="edit"><%= profil.pseudo %></h1>
      <form action="/profil/editing/username" method="post">
         <span>Modifier</span>
         <input name="pseudo" type="text" value="<%= profil.pseudo %>" id="leure" class="none  ">
      </form>
   </div>
   <h2>@<%= profil.username %></h4>
    <h3>Tous les topics créé(s)</h3>
    <% for (post of posts) { %>
        <div class="containComments">
            <div class="comments">
                <h4><%= post.title %></h4>
                <h6><%= post.content %></h4>
            </div>
        </div>
    <% } %> 
    
</div>
    <script src="/assets/js/Error.js"></script>
<script src="/assets/js/editButton.js"></script>

<%- include("../template/footer") %>
